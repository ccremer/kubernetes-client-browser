{
  "name": "@ccremer/kubernetes-client",
  "version": "0.2.2",
  "description": "Generic Kubernetes client run in the Browser",
  "scripts": {
    "preformat": "node ../../README.cjs README.md.njk > README.md",
    "format": "prettier --write ./**/*.{js,ts,json}",
    "lint": "eslint './**/*.{js,ts}'",
    "prelint": "npm run format",
    "test": "vitest run",
    "clean": "rm -rf types fetch api index.*",
    "build": "tsc",
    "ignore:publishVersion": "yq e -i '. += {\"version\": load(\"package.json\").version}' dist/package.json -o json",
    "prepack": "tsc --outDir ./dist && cp package.json README.md dist/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ccremer/kubernetes-client-browser.git"
  },
  "keywords": [
    "kubernetes",
    "client",
    "browser",
    "typescript",
    "fetch"
  ],
  "author": "ccremer",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/ccremer/kubernetes-client-browser/issues"
  },
  "homepage": "https://github.com/ccremer/kubernetes-client-browser#readme",
  "types": "index.d.ts",
  "type": "module",
  "files": [
    "api",
    "fetch",
    "types",
    "index.*"
  ],
  "devDependencies": {
    "eslint-config-custom": "*",
    "vitest": "0.30.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
