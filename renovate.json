{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":disableDependencyDashboard",
    ":gitSignOff"
  ],
  "labels": [
    "dependencies"
  ],
  "npm": {
    "packageRules": [
      {
        "matchFiles": ["packages/kubernetes-client/package.json"],
        "groupName": "core",
        "schedule": [
          "on the first day of the month"
        ]
      },
      {
        "matchFiles": ["packages/kubernetes-client-example-fetch/package.json"],
        "groupName": "fetch-example",
        "schedule": [
          "on the first day of the month"
        ]
      },
      {
        "matchFiles": ["packages/kubernetes-client-angular/package.json"],
        "groupName": "angular",
        "schedule": [
          "on the first day of the month"
        ]
      },
      {
        "matchFiles": ["packages/kubernetes-client-example-angular/package.json"],
        "groupName": "angular-example",
        "schedule": [
          "on the first day of the month"
        ]
      },
      {
        "matchFiles": ["packages/eslint-config-custom/package.json"],
        "groupName": "eslint",
        "schedule": [
          "on the first day of the month"
        ]
      },
      {
        "matchFiles": ["package.json"],
        "groupName": "common",
        "schedule": [
          "on the first day of the month"
        ]
      }
    ]
  }
}
